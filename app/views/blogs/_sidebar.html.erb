<!-- Right Sidebar -->
<div class="col-md-3 magazine-page">

  <!-- Blog Tags -->
  <div class="headline headline-md"><h2>Blog Tags</h2></div>
  <ul class="list-unstyled blog-tags margin-bottom-30">
    <% tag_cloud Blog.tag_counts_on(:tags).most_used.limit(15), % s do |tag, css_class|%>
    <%= link_to tag_path(tag.name), class: css_class do%>
    <li> <i class="fa fa-tags"> <%= tag.name  %></i></li>
    <% end %>
    <% end %>
  </ul>
  <!-- End Blog Tags -->

  <!-- Other Posts (Random) -->
  <div class="posts margin-bottom-40">
    <div class="headline headline-md"><h2>Other Posts</h2></div>
    <% @otherposts.each do |blog| %>
    <dl class="dl-horizontal">
      <%= link_to blog_url(blog) do %>
      <dt><%= image_tag blog.photo_url(:thumb).to_s, :class=> "hover-effect" %></dt>
      <dd>
        <p><strong><%= blog.title.titleize %></strong></p>
      <% end %>
         <p><%= truncate(blog.content, :length => 64)%></p>
      </dd>
    </dl>
    <% end %>
  </div><!--/posts-->
  <!-- End Other Posts (Random) -->


  <!-- Photo Stream -->
  <div class="headline headline-md"><h2>Photo Stream</h2></div>
  <ul class="list-unstyled blog-photos margin-bottom-30">
    <% @randpic.each do |blog| %>
    <% if blog.photo_url != nil %>
    <%= link_to blog, id: "image" do %>
    <li><%= image_tag blog.photo_url(:thumb).to_s, :class=> "hover-effect" %></li>
    <% end %>
    <% end %>
    <% end %>
    </ul>

  <!-- End Photo Stream -->

