<!-- Responsive panel example-->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Blog #<%= @blog.id %></h3>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-md-12">
            <dl class="dl-horizontal">
              <dt>Title</dt>
              <dd><%= @blog.title %></dd>

              <dt>Author</dt>
              <dd><%= @blog.author %></dd>

              <dt>Content</dt>
              <dd><%= @blog.content %></dd>

            </dl>
            <div class="btn-group btn-group-justified">
              <%= link_to icon('chevron-left'), blogs_path, class: "btn btn-primary" %>

              <%= link_to icon('edit'), edit_blog_path(@blog), class: "btn btn-warning" %>

              <%= link_to icon('trash-o'), @blog, method: :delete, data: { confirm: "Do you really want to delete this blog?" }, class: "btn btn-danger" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- End responsive panel example -->

