<!--Blog Post-->
<% @blogs.each do |blog| %>
<div class="blog margin-bottom-40">
<h2><%= blog.title.titleize %></h2>
  <div class="blog-post-tags">
    <ul class="list-unstyled list-inline blog-info">
      <li><i class="fa fa-calendar"></i> <%= blog.created_at.strftime("%B-%m-%Y") %></li>
      <li><i class="fa fa-pencil"></i> <%= blog.author %></li>
      <li><i class="fa fa-comments"></i> <a href="#">24 Comments</a></li>
    </ul>
    <ul class="list-unstyled list-inline blog-tags">
      <li>
        <i class="fa fa-tags"></i>
        <a href="#">Technology</a>
        <a href="#">Education</a>
        <a href="#">Internet</a>
        <a href="#">Media</a>
      </li>
    </ul>
  </div>
  <div class="blog-img">
    <img class="img-responsive" src="/assets/img/main/img18.jpg" alt="">
  </div>
  <p><%= truncate(blog.content, :length => 150) %></p>
  <p> <%= link_to blog, :class=> "btn-u btn-u-small" , id: "show" do %>
    <i class="fa fa-plus-sign"></i>
    Read More
    <% end %></p>
</div>
<% end %>
      <!--End Blog Post-->
