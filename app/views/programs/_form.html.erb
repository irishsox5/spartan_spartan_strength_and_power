    <%= f.label :description %><br>
    <%= f.text_area :description, class: "form-control", :rows => "10" %>
  </div>
  <br>
  <div class="field">
    <%= f.label :price %><br>
    <%= f.number_field :price, class: "form-control", min: 0, placeholder: "Add ONLY Numbers Here" %>
  </div>
